@page "/"
@inject NavigationManager NavigationManager

<PageTitle>Index</PageTitle>

<div style="width: 100%; height: 600px;">
    <div style="width: 100%; height: 100%; display: flex; justify-content: space-around; align-items: center;">
        <div>
            <button style="font-size: 50px;" @onclick="RedirecionarParaFazerDenuncia">Fazer denúncia!</button> <br />
        </div>
        <div>
            <button style="font-size: 50px;" @onclick="RedirecionarParaVerificarDenuncias">Verificar denúncias</button>
        </div>
    </div>
</div>



@code {
    private void RedirecionarParaFazerDenuncia()
    {
        NavigationManager.NavigateTo("/FazerDenuncia");
    }

    private void RedirecionarParaVerificarDenuncias()
    {
        NavigationManager.NavigateTo("/VerificarDenuncias");
    }
}


